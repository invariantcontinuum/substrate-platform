# =============================================================================
# Structural Integrity Platform - Environment Configuration
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
VITE_APP_NAME=Structural Integrity Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_APP_DESCRIPTION=Multi-modal knowledge graph platform for architectural governance

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Base URL for API calls (use /api for proxy, or full URL for direct calls)
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=30000
VITE_API_VERSION=v1

# Enable mock API instead of real backend (true/false)
VITE_ENABLE_MOCK_API=true

# Mock API delay in milliseconds (simulate network latency)
VITE_MOCK_API_DELAY=500

# -----------------------------------------------------------------------------
# Graph Visualization Settings
# -----------------------------------------------------------------------------
# Default graph layout algorithm (forceatlas2, dagre, circle, grid)
VITE_DEFAULT_GRAPH_LAYOUT=forceatlas2

# Maximum nodes to render in graph view before switching to simplified mode
VITE_GRAPH_MAX_NODES=1000

# Enable WebGL acceleration for large graphs (true/false)
VITE_GRAPH_ENABLE_WEBGL=true

# Default node size in pixels
VITE_GRAPH_NODE_SIZE=8

# Default edge width in pixels
VITE_GRAPH_EDGE_WIDTH=1

# -----------------------------------------------------------------------------
# LLM / AI Configuration
# -----------------------------------------------------------------------------
# LLM Provider (openai, anthropic, azure, ollama, custom)
VITE_LLM_PROVIDER=ollama

# API endpoint for LLM (if using custom or Ollama)
VITE_LLM_BASE_URL=http://localhost:11434

# Default model for queries
VITE_LLM_DEFAULT_MODEL=codellama:13b

# Maximum tokens for LLM responses
VITE_LLM_MAX_TOKENS=2048

# Temperature for LLM responses (0.0 - 1.0)
VITE_LLM_TEMPERATURE=0.3

# -----------------------------------------------------------------------------
# Authentication (Future Use)
# -----------------------------------------------------------------------------
# Auth provider (none, oauth, saml, ldap)
VITE_AUTH_PROVIDER=none

# OAuth2/OIDC Configuration
VITE_OAUTH_CLIENT_ID=
VITE_OAUTH_AUTHORITY=
VITE_OAUTH_REDIRECT_URI=http://localhost:5173/callback
VITE_OAUTH_SCOPES=openid profile email

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable real-time updates via WebSocket
VITE_FEATURE_WEBSOCKET=false

# Enable graph diff visualization
VITE_FEATURE_GRAPH_DIFF=true

# Enable policy editing in UI
VITE_FEATURE_POLICY_EDITOR=true

# Enable RAG search interface
VITE_FEATURE_RAG_SEARCH=true

# Enable drift auto-remediation suggestions
VITE_FEATURE_DRIFT_REMEDIATION=true

# -----------------------------------------------------------------------------
# Data Source Connectors (Read-Only Display)
# -----------------------------------------------------------------------------
# Note: Actual credentials are stored server-side only
VITE_GITHUB_ENABLED=true
VITE_JIRA_ENABLED=true
VITE_CONFLUENCE_ENABLED=true
VITE_SLACK_ENABLED=false

# Default sync interval in minutes
VITE_SYNC_INTERVAL_MINUTES=15

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------
# Enable frontend error tracking
VITE_ENABLE_ERROR_TRACKING=false

# Analytics provider (none, posthog, amplitude, segment)
VITE_ANALYTICS_PROVIDER=none

# Analytics API key (if applicable)
VITE_ANALYTICS_API_KEY=

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Enable React Query devtools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable Zustand devtools
VITE_ENABLE_ZUSTAND_DEVTOOLS=true

# Mock scenario (default, drift-heavy, clean, empty)
VITE_MOCK_SCENARIO=default
